{
  "name": "rs-x",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.22.0",
  "workspaces": [
    "rs-x-core",
    "rs-x-state-manager",
    "rs-x-expression-parser",
    "rs-x-angular/projects/rsx"
  ],
  "scripts": {
    "build:libs": "pnpm --filter '@rs-x/core' run build && pnpm --filter '@rs-x/state-manager' run build && pnpm --filter '@rs-x/expression-parser' run build &&  pnpm --filter '@rs-x/react' run build",
    "build:angular": "pnpm --prefix rs-x-angular run build:angular",
    "clean": "pnpm -r exec rimraf node_modules dist && pnpm exec rimraf node_modules dist .pnpm-store",
    "reinstall": "pnpm run clean && pnpm install",
    "build:core": "pnpm --filter @rs-x/core run build",
    "build:state-manager": "pnpm --filter @rs-x/state-manager run build",
    "build:expression-parser": "pnpm --filter @rs-x/expression-parser run build",
    "build:react": "pnpm --filter @rs-x/react run build",
    "test": "cross-env TZ=UTC pnpm jest --runInBand --no-cache --config jest.config.ts",
    "test:angular": "pnpm --prefix rs-x-angular run test",
    "test:react": "pnpm --prefix rs-x-react run test",
    "test:coverage": "cross-env TZ=UTC pnpm jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "readme": "pnpm ts-node demo/update-readmes.ts"
  },
  "devDependencies": {
    "@angular/common": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/platform-browser-dynamic": "21.1.0",
    "@changesets/cli": "^2.29.8",
    "@swc/core": "^1.15.10",
    "@types/espree": "10.1.0",
    "@types/estraverse": "5.1.7",
    "@types/jest": "^30.0.0",
    "@types/lodash.clonedeepwith": "^4.5.9",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@ungap/structured-clone": "^1.3.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-stub": "^2.0.0",
    "ng-packagr": "^21.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rxjs": "^7.8.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8",
    "zone.js": "^0.16.0"
  }
}
